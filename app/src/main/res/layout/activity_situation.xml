<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"

              tools:context=".SituationActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/group_detail_fab"
        android:layout_gravity="bottom|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:borderWidth="0dp"
        app:fabSize="normal"
        android:src="@drawable/icon_date"
        android:layout_margin="16dp"
        />

    <TextView
        android:text="@string/situation_title"
        android:id="@+id/situation_title"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"/>

    <ImageView
        android:layout_width="243dp"
        android:layout_height="174dp"
        android:id="@+id/imageView5"
        android:src="@drawable/pig"
        android:layout_weight="0.58"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <Button
            android:text="@string/gokon_button"
            android:id="@+id/gokon_button"
            android:onClick="selectGokon"
            android:textSize="30sp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:text="@string/date_button"
            android:id="@+id/date_button"
            android:onClick="selectDate"
            android:textSize="30sp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:text="@string/gaikokujin_button"
            android:id="@+id/gaikokujin_button"
            android:onClick="selectGaikokujin"
            android:textSize="30sp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>



    </LinearLayout>

</LinearLayout>
