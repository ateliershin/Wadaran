<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.wadaran.wadaran.NowLocationActivity">

    //test-tomo

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/longitude"
        android:layout_marginTop="30dp"
        android:text="longitude"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="latitude"
        android:id="@+id/latitude"
        android:layout_alignTop="@+id/longitude"
        android:layout_toStartOf="@+id/enabled"
        android:layout_marginEnd="51dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="geo_time"
        android:id="@+id/geo_time"
        android:layout_below="@+id/latitude"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message"
        android:id="@+id/message"
        android:layout_below="@+id/geo_time"
        android:layout_alignParentStart="true"
        android:layout_marginTop="104dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="provider"
        android:id="@+id/provider"
        android:layout_above="@+id/geo_time"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="41dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enabled"
        android:id="@+id/enabled"
        android:layout_below="@+id/message"
        android:layout_alignEnd="@+id/geo_time"
        android:layout_marginTop="85dp"/>

</RelativeLayout>
